{
  "app-id": "org.gnome.Quadrapassel",
  "runtime": "org.gnome.Platform",
  "runtime-version": "49",
  "sdk": "org.gnome.Sdk",
  "command": "quadrapassel",
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri",
    "--device=all",
    "--socket=pulseaudio"
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/share/pkgconfig",
    "/share/aclocal",
    "/man",
    "/share/man",
    "/share/gtk-doc",
    "*.la",
    "*.a",
    "/lib/girepository-1.0",
    "/share/doc",
    "/share/gir-1.0"
  ],
  "modules": [
    {
      "name" : "gsound",
      "buildsystem": "meson",
      "sources" : [
        {
          "type" : "archive",
          "url" : "https://download.gnome.org/sources/gsound/1.0/gsound-1.0.3.tar.xz",
          "sha256": "ca2d039e1ebd148647017a7f548862350bc9af01986d39f10cfdc8e95f07881a"
        }
      ],
      "modules": [
        {
          "name": "libcanberra",
          "config-opts": [
            "--disable-alsa",
            "--disable-null",
            "--disable-oss"
          ],
          "sources": [
            {
              "type": "archive",
              "url": "http://0pointer.de/lennart/projects/libcanberra/libcanberra-0.30.tar.xz",
              "sha256": "c2b671e67e0c288a69fc33dc1b6f1b534d07882c2aceed37004bf48c601afa72"
            }
          ]
        }
      ]
    },
    {
      "name": "libmanette",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "archive",
          "url": "https://download.gnome.org/sources/libmanette/0.2/libmanette-0.2.13.tar.xz",
          "sha256": "287cc2fde0de092919366af757d85e7b3a0248eb1b395344726e97955a77d8ae"
        }
      ],
      "modules": [
      	{
          "name": "libevdev",
          "sources": [
            {
              "type": "git",
              "url": "https://gitlab.freedesktop.org/libevdev/libevdev.git",
              "tag": "libevdev-1.13.4",
              "commit": "ac0056961c3332a260db063ab4fccc7747638a1d"
            }
          ]
        }
      ]
    },
    {
      "name": "quadrapassel",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "archive",
          "url": "https://download.gnome.org/sources/quadrapassel/49/quadrapassel-49.2.1.tar.xz",
          "sha256": "a5320a6f8ee08562a436caba4e34f7ae040fedc8d72fbea227f7025d93c4c6b9"
        }
      ]
    }
  ]
}
