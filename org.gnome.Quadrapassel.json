{
  "app-id": "org.gnome.Quadrapassel",
  "runtime": "org.gnome.Platform",
  "runtime-version": "48",
  "sdk": "org.gnome.Sdk",
  "command": "quadrapassel",
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri",
    "--socket=pulseaudio"
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/share/pkgconfig",
    "/share/aclocal",
    "/man",
    "/share/man",
    "/share/gtk-doc",
    "*.la",
    "*.a",
    "/lib/girepository-1.0",
    "/share/doc",
    "/share/gir-1.0"
  ],
  "modules": [
    {
      "name" : "gsound",
      "buildsystem": "meson",
      "sources" : [
        {
          "type" : "archive",
          "url" : "https://download.gnome.org/sources/gsound/1.0/gsound-1.0.3.tar.xz",
          "sha256": "ca2d039e1ebd148647017a7f548862350bc9af01986d39f10cfdc8e95f07881a"
        }
      ],
      "modules" : [
        "shared-modules/libcanberra/libcanberra.json"
      ]
    },
    {
      "name": "blueprint-compiler",
      "buildsystem": "meson",
      "cleanup": ["*"],
      "sources": [
        {
          "type": "git",
          "url": "https://gitlab.gnome.org/GNOME/blueprint-compiler",
          "commit": "07c9c9df9cd1b6b4454ecba21ee58211e9144a4b"
        }
      ]
    },
    {
      "name": "libevdev",
      "sources": [
        {
          "type": "git",
          "url": "https://gitlab.freedesktop.org/libevdev/libevdev.git",
          "tag": "libevdev-1.13.4",
          "commit": "ac0056961c3332a260db063ab4fccc7747638a1d"
        }
      ]
    },
    {
      "name": "libmanette",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "git",
          "url": "https://gitlab.gnome.org/GNOME/libmanette.git",
          "tag": "0.2.12",
          "commit": "4269d756333897828e82a3b4d593af2c24d83da0",
          "x-checker-data": {
              "type": "git",
              "tag-pattern": "^([\\d.]+)$"
          }
        }
      ]
    },
    "shared-modules/clutter/clutter.json",
    {
      "name": "quadrapassel",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "archive",
          "url": "https://gitlab.gnome.org/GNOME/quadrapassel/-/archive/49.0/quadrapassel-49.0.tar.gz",
          "sha256": "2cbbd4905491f97074feab9562f74eef1df4739e014362416b5590280e4b8816"
        }
      ]
    }
  ]
}
