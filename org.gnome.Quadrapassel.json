{
  "app-id": "org.gnome.Quadrapassel",
  "runtime": "org.gnome.Platform",
  "runtime-version": "49",
  "sdk": "org.gnome.Sdk",
  "command": "quadrapassel",
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri",
    "--device=all",
    "--socket=pulseaudio"
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/share/pkgconfig",
    "/share/aclocal",
    "/man",
    "/share/man",
    "/share/gtk-doc",
    "*.la",
    "*.a",
    "/lib/girepository-1.0",
    "/share/doc",
    "/share/gir-1.0"
  ],
  "modules": [
    {
      "name" : "gsound",
      "buildsystem": "meson",
      "sources" : [
        {
          "type" : "archive",
          "url" : "https://download.gnome.org/sources/gsound/1.0/gsound-1.0.3.tar.xz",
          "sha256": "ca2d039e1ebd148647017a7f548862350bc9af01986d39f10cfdc8e95f07881a"
        }
      ],
      "modules": [
        {
          "name": "libcanberra",
          "config-opts": [
            "--disable-alsa",
            "--disable-null",
            "--disable-oss"
          ],
          "sources": [
            {
              "type": "archive",
              "url": "http://0pointer.de/lennart/projects/libcanberra/libcanberra-0.30.tar.xz",
              "sha256": "c2b671e67e0c288a69fc33dc1b6f1b534d07882c2aceed37004bf48c601afa72"
            }
          ]
        }
      ]
    },
    {
      "name": "libmanette",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "git",
          "url": "https://gitlab.gnome.org/GNOME/libmanette.git",
          "tag": "0.2.9",
          "commit": "508df238f9c25a20c0d06da8c9bf83138759d40f"
        }
      ],
      "modules": [
      	{
          "name": "libevdev",
          "sources": [
            {
              "type": "git",
              "url": "https://gitlab.freedesktop.org/libevdev/libevdev.git",
              "tag": "libevdev-1.13.3",
              "commit": "2342d8c9eea862111991a609df961adae89f8eee"
            }
          ]
        }
      ]
    },
    {
      "name": "quadrapassel",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "archive",
          "url": "https://download.gnome.org/sources/quadrapassel/49/quadrapassel-49.0.tar.xz",
          "sha256": "54531edf0f9aa66936aa34079afcc2a5c00025f40168cafb7ebb1db8f242eee1"
        }
      ]
    }
  ]
}
